{% extends 'base.html.twig' %}

{% block body %}
<style type="text/css">
	/*.bg*/
	body { 
    /* The image used */
    background-image: url("{{ asset('img/listado_bg.jpg') }}");

    /* Full height */
    height: 100%; 
    padding: 1em 16em 24em 6em;

    /* Center and scale the image nicely */
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

   
</style>
	<article>
	<div class="row list-container">
	
		<table class="listado">
			<thead>
				<tr>
					<th>NÃºmero de cliente</th>
					<th>Nombre</th>
					<th>Apellido</th>
					<th>DNI</th>					
					<th>Passaporte</th>
					<th>Edad</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for c in clientes %}
					
					<tr>
						<td>{{ c.id }}</td>
						<td>{{ c.nombre }} </td>
						<td>{{ c.apellido }} </td>
						<td>{{ c.dni }} </td>
						<td>{{ c.passaporte }}</td>
						<td>{{ c.edad }}</td>
						<td><button class="btn"><a href="./updateClient/{{ c.id }} "><i class="fa fa-pencil" aria-hidden="true"></i>Editar</button></a></td>
						<td><button class="btn"><a href="./verReservasClient/{{ c.id }} "><i class="fa fa-bed" aria-hidden="true"></i>Ver reservas</button></a></td>
					</tr>
					
				{% endfor %}
			</tbody>
		</table>
		</div>
	</article>
{% endblock %}

{% block javascripts %}
	<script>
	$(document).ready(function() {
	$('table.listado').DataTable();
	} );
	
	</script>
{% endblock %}